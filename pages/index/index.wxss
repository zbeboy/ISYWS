/**index.wxss**/

.title {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-image {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.title-name {
  color: #aaa;
}

.login-form input[type="text"], .login-form input[type="password"] {
  width: 80%;
  border: 1px solid #314d89;
  outline: none;
  padding: 12px 20px;
  color: #afafaf;
  font-weight: 400;
  font-family: 'Lato', sans-serif;
  margin-left: 16px;
  cursor: pointer;
}

.login-form input[type="text"] {
  border-bottom: none;
  border-radius: 4px 4px 0 0;
  padding-bottom: 13px;
  margin-top: 10%;
  box-shadow: 0 -1px 0 #e0e0e0 inset, 0 1px 2px rgba(0, 0, 0, 0.23) inset;
}

.login-form input[type="password"] {
  border-top: none;
  border-radius: 0 0 4px 4px;
  box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.23) inset, 0 1px 2px rgba(255, 255, 255, 0.1);
}

.login-btn {
  font-family: 'Lato', sans-serif;
  display: block;
  margin: 20px auto 0 auto;
  width: 90%;
  border: none;
  border-radius: 3px;
  padding: 8px;
  font-size: 17px;
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.45);
  font-weight: 700;
  box-shadow: 0 1px 3px 1px rgba(0, 0, 0, 0.17), 0 1px 0 rgba(255, 255, 255, 0.36) inset;
}

.ad_popError {
  background: #de352d;
  color: #fff;
  height: 70rpx;
  line-height: 58rpx;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 3;
}
